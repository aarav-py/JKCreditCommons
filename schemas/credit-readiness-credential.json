{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jkcreditcommons.gov/schemas/credit-readiness-credential.json",
  "title": "Credit Readiness Credential",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "expirationDate", "credentialSubject"],
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "type": {
      "type": "array",
      "items": { "type": "string" }
    },
    "issuer": { "type": "string" },
    "issuanceDate": { "type": "string", "format": "date-time" },
    "expirationDate": { "type": "string", "format": "date-time" },
    "credentialSubject": {
      "type": "object",
      "required": [
        "enterprise_exists",
        "months_active",
        "validation_source",
        "sector",
        "district"
      ],
      "properties": {
        "enterprise_exists": { "type": "boolean" },
        "months_active": { "type": "integer", "minimum": 0 },
        "validation_source": { "type": "string" },
        "sector": { "type": "string" },
        "district": { "type": "string" }
      }
    }
  }
}
